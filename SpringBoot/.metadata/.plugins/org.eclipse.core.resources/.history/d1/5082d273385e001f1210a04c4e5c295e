package com.eight;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

/**
 * Handles requests and diverts the requests to the service layer
 */
@Component
public class controller
{	
	@Autowired
	private service s;
	
	
	public controller()
	{
		System.out.println("controller default constructor called");
	}
	
	@Autowired
	public controller(service s)
	{
		System.out.println("Step "+A.count() +" >> "+ " Controller constructor entered");
		this.s = s;
		System.out.println("Step "+A.count() +" >> "+ "Controller constructor exited");
	}
	
	public void save(emp e)
	{
		System.out.println("controller saving started");
		s.save(e);
		System.out.println("controller saving exited");
	}
}
